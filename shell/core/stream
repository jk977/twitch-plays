#!/bin/sh
# Starts streaming to Twitch.

. "$( dirname "$0" )/../settings.sh"
. "$shldir/tests.sh"

load_stream_vars
stream="${s_uri}${s_dest}"

get_audio_args() {
    if test_readable_file "$s_audio"; then
        # use audio from file
        echo "-i $s_audio -c:a mp3 -ac 2"
    elif [ "$s_audio" -eq $gameaudio ] && test_installed pulseaudio; then
        # use audio from game via pulse
        echo "-thread_queue_size 64 -f pulse -ar 44100 -i default"
    fi
}

send_signal() {
    # sends signal to bot proces
    bot_pid=$( cat "$datadir/procs/bot.py.id" 2>/dev/null )
    [ -n "$bot_pid" ] && kill -s ALRM "$bot_pid"
}

die() {
    echo "Exiting stream script"
    kill 0
}

trap "exit" INT TERM
trap "die" EXIT

while :; do
    ffmpeg \
        $(get_audio_args) \
        -threads 4 -f x11grab -r $s_framerate -s ${s_dimensions_x}x${s_dimensions_y} -i :${s_display}.${s_screen}+${s_capture_x},${s_capture_y} \
        -c:v libx264 -preset medium -pix_fmt yuv420p \
        -shortest -f avi "$stream" 2>&1 |\
            tee -a "$(get_log_dest stream.log)"

    if $s_loops; then
        $s_sig && send_signal
    else
        exit 0
    fi
done
